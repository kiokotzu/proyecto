/*------- Normalize -------*/
@import 'normalize.styl'

/*---fuentes---*/
@import 'fuentes.styl'

@import "nib"


/*-- variables --*/
azul = blue
amarillo = yellow
blanco = #fff
negro = #333333
gris = #818181
rojo = #bd255b
gris_fondo = #f0f0f0
vendor-prefixes = webkit o ms moz official


/*--------mixins---------*/
cursiva()
  font-style italic

mayuscula()
  text-transform uppercase

bold()
  font-weight bold

block()
  display block

centrar()
  margin 0 auto
  block()

alinear()
   display inline-block
   vertical-align top
   zoom 1

font(valor)
  font-size valor

/*------------Clases globales--------------*/
.left
  float left

.right
  float right

.border
  border 1px solid rojo

.clear
  clear both

.relative
	position relative

.padding
	padding 1em

.nombre
		bold()

.autor
	 	color gris

p
	margin .5em 0

.border-bottom 
   border-bottom 1px solid gris

.wrap
    width 1000px
    centrar()

/*-----------------Body y Container---------------------*/
body
  background gris_fondo
  color negro
  font(16px)
  font-family sans-serif

.wrapper
	font(0)
	padding 1.4rem
	text-align center



/*---------------------Loader---------------------------*/





/*-------------------------header-----------------------*/
header
	position relative
	.button-menu
	   color negro
	   left .5em
	   margin-top -10px
	   position absolute
	   top 50%
	   transition .5s
	   &:hover
	   &:active
	   	 color gris
	.titulo
     bold()
     font(1em)
     line-height 3.5em
     margin 0
     text-align center

nav
  display none

.logo
  background blanco
  padding 1.3em 0
  display none
  zoom 1

/*-----------------------Slider-------------------------*/



/*----------------------Contenido-----------------------*/

/*----------Home-----------*/
.reproductor
  centrar()
  width 20em
	.progress
    margin 1em 0  
    position relative
    .min
    .max        
      font(.8em)
      position absolute
      top -5px
    .min
    	left 0
    .max
    	right 0
    .barra
      background gris
      border-radius 5px
      height 5px
      margin 0 auto 
      width 75%
      .carga
      	background rojo
      	border-radius 5px
      	height 5px 
      	position relative
      	width 30%
      	.circulo
  	 	 	  background negro
  	 	 	  border-radius 50%
  	 	 	  height 15px
  	 	 	  position absolute
  	 	 	  right 0
  	 	 	  top -5px
  	 	 	  width 15px
  .descripcion
  	  text-align center
  .play
  	  padding .9em 0
  	  text-align center
  	  .gris
  	  	font(1.2em)
  	  	color gris
  	  	margin 0 3px
  	  	transition .5s
  	  	&:hover
  	  	&:active
  	  		color negro
	  
	.acciones
		background rgba(0,0,0,.5)
		bottom 0
		left: 0
		position absolute
		right: 0
		text-align right
		.action
      color blanco
      font(1.2em)
      margin-right .5em
      transition .5s
      &:hover
      &:active
      	color negro

.cancion
	 alinear()
	 font(1rem)
	 margin 0 1em 1em 0
	 text-align left
	 width 8rem
	 &:nth-child(even)
		   margin-right 0
	 figure
	 	   margin 0





/*---------------------Footer---------------------------*/



/*------------------Mediaqueries------------------------*/
@media screen and (min-width:480px)
  .cancion
    &:nth-child(even)
      margin-right 1em
  .reproductor
    width auto
    img
      width 100%
      height auto

@media screen and (min-width:1000px)
  .button-menu
  header .titulo
    display none
  .logo
    display block
  nav
    background gris_fondo
    border-top 1px solid gris
    display block
    li
      float left
      a
        block()
        border-top 5px solid transparent
        color negro
        padding 1em
        text-transform uppercase
        transition .5s
        &:hover
          border-color gris
  .logo 
    .cont-logo
      width 122px
  .usuario
    .avatar
      border-radius 50%
      height 38px
      overflow hidden
      width 38px
  .buscador
    form
      input
        border 1px solid gris
        border-radius 5px
        height 1.2em
        margin-right .5em
        padding 1em 2em
      .search-icon
        position absolute
        left .5em
        top .8em
        color gris
      .close-icon
        position absolute
        top .6em
        color gris
        right .8em
        font(1.2em)
  .nikname
    color gris
    margin-left .5em
    position relative
    top 8px
    &:after
      alinear()
      border-left 10px solid transparent
      border-right 10px solid transparent
      border-top 10px solid gris
      content ''
      margin-left .4em
      position relative
      top 4px

