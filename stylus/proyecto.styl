/*------- Normalize -------*/
@import 'normalize.styl'

/*---fuentes---*/
@import 'fuentes.styl'

@import "nib"


/*-- variables --*/
azul = blue
amarillo = yellow
blanco = #fff
negro = #333333
gris = #818181
rojo = #bd255b
vendor-prefixes = webkit o ms moz official


/*--------mixins---------*/
border()
  border 1px solid rojo

cursiva()
  font-style italic

mayuscula()
  text-transform uppercase

bold()
  font-weight bold

block()
  display block

centrar()
  margin 0 auto
  block()

alinear()
   display inline-block
   vertical-align top
   zoom 1

font(valor)
  font-size valor

/*------------Clases globales--------------*/
.left
  float left

.right
  float right

.border
  border 1px solid rojo

.clear
  clear both

.relative
	position relative

.padding
	padding 1em

.nombre
		bold()

.autor
	 	color gris

p
	margin .5em 0

.border-bottom 
   border-bottom 1px solid gris

/*-----------------Body y Container---------------------*/
body
  font(16px)
  color negro
  font-family sans-serif

.wrapper
	font(0)
	padding 1.4rem
	text-align center



/*---------------------Loader---------------------------*/





/*-------------------------header-----------------------*/
header
	position relative
	.button-menu
	   color negro
	   left .5em
	   margin-top -10px
	   position absolute
	   top 50%
	   transition .5s
	   &:hover
	   &:active
	   	 color gris
	.titulo
     bold()
     font(1em)
     line-height 3.5em
     margin 0
     text-align center


/*-----------------------Slider-------------------------*/



