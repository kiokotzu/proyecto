/*----------Home-----------*/
.reproductor
	.progress
    	margin 1em 0
    	position relative
    	.min
    	.max
    	  	 position absolute
    	  	 font(.8em)
    	  	 top -5px
    	.min
    		left 0
    	.max
    		right 0
    	.barra
    	  background gris
    	  border-radius 5px
    	  height 5px
    	  margin 0 auto 
    	  width 75%
    	  .carga
    	  	background rojo
    	  	border-radius 5px
    	  	height 5px 
    	  	position relative
    	  	width 30%
    	  	.circulo
  	  	 	  background negro
  	  	 	  border-radius 50%
  	  	 	  height 15px
  	  	 	  position absolute
  	  	 	  right 0
  	  	 	  top -5px
  	  	 	  width 15px
  .descripcion
  	  text-align center
  .play
  	  padding .9em 0
  	  text-align center
  	  .gris
  	  	font(1.2em)
  	  	color gris
  	  	margin 0 3px
  	  	transition .5s
  	  	&:hover
  	  	&:active
  	  		color negro
	  
	.acciones
		background rgba(0,0,0,.5)
		bottom 0
		left: 0
		position absolute
		right: 0
		text-align right
		.action
      color blanco
      font(1.2em)
      margin-right .5em
      transition .5s
      &:hover
      &:active
      	color negro

.cancion
	 alinear()
	 font(1rem)
	 margin 0 1em 1em 0
	 text-align left
	 width 8rem
	 &:nth-child(even)
		   margin-right 0
	 figure
	 	   margin 0





